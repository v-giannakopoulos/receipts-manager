{
  "name": "receipt-manager",
  "version": "1.0.0",
  "description": "Receipt & Warranty Manager",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --arm64",
    "build-dmg": "electron-builder --mac --arm64 --dir"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourname.receiptmanager",
    "productName": "Receipt Manager",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "icon": "build/icon.icns"
    },
    "files": [
      "electron-main.js",
      "frontend/**/*",
      "backend/**",
      "!backend/**/__pycache__",
      "!backend/**/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*", "!**/__pycache__", "!**/*.pyc"]
      }
    ]
  }
}

