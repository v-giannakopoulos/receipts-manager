{
  "name": "receipt-warranty-manager",
  "version": "1.0.0",
  "description": "Receipt & Warranty Manager",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --arm64",
    "build:dmg": "electron-builder --mac --arm64 dmg"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "eu.savagi.receipts-manager",
    "productName": "Receipt Manager",
    "asar": true,
    "asarUnpack": [
      "**/*.py",
      "venv/**/*",
      "templates/**/*",
      "static/**/*",
      "data/**/*",
      "storage/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "icon.icns"
    },
    "dmg": {
      "title": "Receipt Manager",
      "icon": "icon.icns",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "electron-main.js",
      "app.py",
      "ocr_service.py",
      "templates/**",
      "static/**",
      "data/**",
      "storage/**",
      "venv/**",
      "requirements.txt"
    ],
    "extraResources": [
      {
        "from": "storage",
        "to": "storage"
      },
      {
        "from": "data",
        "to": "data"
      }
    ]
  }
}
